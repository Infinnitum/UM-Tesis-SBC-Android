<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allLayout"
    android:focusableInTouchMode="false"
    android:background="@color/general_background"
    android:screenOrientation="portrait"
    android:transitionGroup="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menuLayout"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/menuLayoutTitle"
            android:id="@+id/menuLayoutTitle"
            style="@style/title_single" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/kbase"
                android:id="@+id/kbase"
                android:layout_weight="1"
                android:onClick="kbase"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/update"
                android:id="@+id/update"
                android:layout_weight="1"
                android:singleLine="false"
                android:onClick="kbupdate"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kbLayout"
            android:focusableInTouchMode="false">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/kbLayoutTitle"
                android:id="@+id/kbLayoutTitle"
                style="@style/title_double" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/kbspinner"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    style="@android:style/TextAppearance.Large" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/start"
                    android:id="@+id/kbstart"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:onClick="kbstart"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/back"
                    android:id="@+id/kbback"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:onClick="kbback"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/askLayout">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/actionLayout">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/deleteLayout">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/askDeleteLayout">
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/explainLayout">
        </LinearLayout>


    </LinearLayout>

</LinearLayout>